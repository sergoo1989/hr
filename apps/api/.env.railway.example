# ملف متغيرات البيئة لـ Railway
# انسخ هذه المتغيرات إلى قسم Variables في Railway

# بيئة التطبيق
NODE_ENV=production

# المنفذ (Railway سيوفر قيمة تلقائياً)
PORT=3000

# إعدادات JWT
JWT_SECRET=change-this-to-a-very-secure-random-string-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# إعدادات البريد الإلكتروني (اختياري - للإشعارات)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=noreply@yourcompany.com

# إعدادات CORS (أضف رابط Vercel الخاص بك)
CORS_ORIGIN=https://your-vercel-app.vercel.app

# معلومات الشركة الافتراضية
COMPANY_NAME=شركتك
COMPANY_ADDRESS=عنوان الشركة
COMPANY_PHONE=+966-XXX-XXXX
COMPANY_EMAIL=info@company.com
