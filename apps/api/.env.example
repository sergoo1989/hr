# Database Configuration
# For Prisma Cloud PostgreSQL (No Docker needed!)
DATABASE_URL="postgres://your-user:your-password@db.prisma.io:5432/postgres?sslmode=require"
# Or for local PostgreSQL:
# DATABASE_URL="postgresql://postgres:postgrespassword@localhost:5432/hr_db?schema=public"

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# CORS Configuration
CORS_ORIGIN="*"

# Email Configuration (Optional)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-email-password"

# Node Environment
NODE_ENV="development"
PORT="3000"
